[mysqld_safe]
#wsrep_urls=gcomm://192.168.70.2:4567,gcomm://192.168.70.3:4567,gcomm://192.168.70.4:4567,gcomm://

[mysqld]
datadir=/var/lib/mysql
user=mysql
log_error=error.log

binlog_format=ROW

bind-address=<%= ipaddress_eth1 %>
innodb_log_file_size=64M

wsrep_cluster_name=mycluster
#wsrep_cluster_address=gcomm://192.168.70.2,192.168.70.3,192.168.70.4
wsrep_node_name=<%= hostname %>
wsrep_node_address=<%= ipaddress_eth1 %>


wsrep_provider=/usr/lib64/libgalera_smm.so

wsrep_sst_method=xtrabackup
wsrep_sst_auth=root:

wsrep_slave_threads=2

innodb_locks_unsafe_for_binlog=1
innodb_autoinc_lock_mode=2

[mysql]
prompt="<%=hostname %> mysql> "

[client]
user=root
